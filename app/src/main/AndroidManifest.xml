<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ttit.helloworld">
    <!-- 权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ttit.jetpack.workmanager.WorkManagerActivity"
            android:exported="false"
            android:label="@string/title_activity_work_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ttit.jetpack.room.StudentListRoomActivity"
            android:launchMode="singleInstance">
            <intent-filter>

                <!-- 设置为主入口 -->
                <action android:name="android.intent.action.MAIN" />
                <!-- 设置为启动页 -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        <activity
            android:name="com.ttit.jetpack.navigation.NavMainActivity"
            android:exported="true"
            android:label="@string/title_activity_nav"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                &lt;!&ndash; 设置为主入口 &ndash;&gt;
                <action android:name="android.intent.action.MAIN" />
                &lt;!&ndash; 设置为启动页 &ndash;&gt;
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <nav-graph android:value="@navigation/nav_graph"/>
        </activity>
        -->
        <activity
            android:name="com.ttit.jetpack.databinding.DataBindingTest"
            android:exported="false" />
        <activity
            android:name="com.ttit.jetpack.lifecycle.LifeCycleActivity"
            android:exported="false" />
        <activity
            android:name="com.ttit.core.drawable.DrawableActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.ttit.core.activity.SecondActivity"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="com.ttit.core.action.SecondActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.ttit.core.activity.ThirdActivity">
            <intent-filter>
                <action android:name="com.ttit.core.action.ThirdActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ttit.core.taskstack.Bactivity"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.ttit.core.taskstack.Cactivity"
            android:launchMode="standard" /> <!-- <activity -->
        <!-- android:name="com.ttit.core.webview.WebViewActivity" -->
        <!-- android:launchMode="singleTask" /> -->
        <activity android:name="com.ttit.core.broadcastreceiver.BActivity" /> <!-- 配置Service组件,同时配置一个action -->
        <service android:name="com.ttit.core.service.MyService1" />
        <service android:name="com.ttit.core.service.MyService2" />
        <service android:name="com.ttit.jetpack.lifecycle.MyLocationService" />

        <receiver android:name="com.ttit.core.broadcastreceiver.StaticBRReceiver">
            <intent-filter>
                <action android:name="com.example.broadcasttest.StaticBRReceiver" />
            </intent-filter>
        </receiver> <!-- 属性依次为：全限定类名,用于匹配的URI,是否共享数据 -->
        <!-- android:authorities 作为 NameContentProvider的命名空间 -->
        <provider
            android:name="com.ttit.core.provider.NameContentProvider"
            android:authorities="com.ttit.providers.myprovider"
            android:exported="true" />
    </application>

</manifest>